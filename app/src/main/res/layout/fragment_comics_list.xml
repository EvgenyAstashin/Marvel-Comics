<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.astashin.marvelcomics.ui.comics.ComicsViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.comics.ComicsListFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@{viewmodel.title}"
            app:titleTextColor="@color/white"
            android:background="@color/darkBlue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:textColor="@color/white"
            android:text="@string/nothing_to_show"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:visibility="@{!viewmodel.loading &amp;&amp; viewmodel.comicsList.size() == 0 ? View.VISIBLE : View.INVISIBLE}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/transparent_black"
            android:clickable="true"
            android:focusable="true"
            android:visibility="@{viewmodel.loading? View.VISIBLE : View.INVISIBLE}">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>